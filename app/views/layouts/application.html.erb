<!DOCTYPE html>
<html>
<head>
  <title>Udemi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="udemi">
	

	<nav class="navbar navbar-inverse navbar-static-to">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1><%= link_to "Udemi", root_path, :class => 'navbar-brand' %></h1>
         
        </div>
        <div id="navbar" class="navbar-collapse collapse">
	        <div class="navbar-right">
	        	<% if user_signed_in? %>
				<span class="txt-light">Logged in as <strong><%= current_user.email %></strong>.</span>
				<%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'btn btn-danger' %>

				<%= link_to 'Create course', new_course_path, :class => 'btn btn-info' %>
				<% else %>
					<%= link_to 'Sign up', new_user_registration_path, :class => 'btn btn-info' %>
					<%= link_to 'Login', new_user_session_path, :class => 'btn btn-success' %>
				<% end %>
	        </div>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>


	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 default- centered">
				<div class="alert alert-success">
					<p><%= notice %></p>
				</div>

				<div class="alert alert-danger">
					<p><%= alert %></p>
				</div>
			</div>

			
				<%= yield %>

		</div>
	</div>
</div>
</body>
</html>
